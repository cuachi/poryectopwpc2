<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">
            <%= image.title %>
        </h2>
    </div>

    <div class="panel-body">
        <p>
            <%= image.description %>
        </p>
        <div class="col-md-12 text-center">
            <img src=<%= "/public/upload/"+image.filename%> alt=<%=image.title%> class="img-thumbnail">
        </div>
    </div>

    <div class="panel-footer">
        <div class="row">
            <div class="col-md-8">
                <button class="btn btn-success" id="btn-like" data-id="<%=image.uniqueId%>">
                    <i class="fa fa-heart">Like </i>
                </button>
                <strong class="likes-count">
                    <%= image.likes%>
                </strong>&nbsp;-&nbsp;
                <i class="fa fa-eye"></i>
                <strong>
                    <%= image.views %>
                </strong>
                &nbsp;-&nbsp;Publicaci√≥n:
                <em class="text-muted">
                    <%= timeago(image.timestamp) %>
                </em>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-8">
                <strong class="panel-title">Comentarios:

                </strong>
            </div>
            <div class="col-md-4 text-right">
                <button class="btn btn-default btn-sm" id="btn-comment" data-id=<%= image.uniqueId %></button>>
                <i class="fa fa-comments-o">
                    Publicar comentario...
                </i>
                </button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <blockquote class="post-comment" id ="post-comment">
            <d.-.iv class="row">
                <form action=<%= "/images/comment/"+image.uniqueId%> method="post">
                    <div class="form-group col-sm-12">
                        <label for="name" class="col-sm-2 control-label">
                            Nombre:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="name" id="name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <label for="email" class="col-sm-2 control-label">
                            Email:
                        </label>
                        <div class="col-sm-10">
                            <input type="text" name="email" id="email" class="form-control">
                        </div>
                    </div>
                    <div class="form-group col-sm-12">
                        <label for="comment" class="col-sm-2 control-label">
                            Comentario:
                        </label>
                        <div class="col-sm-10">
                            <textarea name="comment" id="email" rows="2" class="form-control" ></textarea>
                        </div>
                    </div>
                    <div class="form-control col sm 12">
                        <div class="col-sm-12 text-right">
                            <button type="submit" id="comment-btn" class="btn btn-success">
                                <i class="fa fa-comment">
                                    Publicar
                                </i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </blockquote>

        <ul class="media-list">
            <% comments.forEach(function(comment){ %>
                <li class="media">
                    <a href="#" class="pull-left">
                        <img src=<%= "http://www.gravatar.com/avatar/"+comment.gravatar%> alt="imagen avatar" class="media-object">
                    </a>
                    <div class="media-body">
                        <%= comment.text %>
                        <br>
                        <strong class="media-heading">
                            <small class="text-muted"><%= timeago(comment.timestamp)%>
                            </small>
                        </strong>
                    </div>
                </li>
            <% });%>
        </ul>
    </div>
</div>